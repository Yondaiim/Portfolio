<%- include('./partials/header', {title : "Modifier un article", style:"addpost" }) %>
    <div class="titre">
        <h1>Modifier un article</h1>
    </div>
    
    <div class="ajoutarticle">
        <form action="/article/update/<%= post._id %>" method="post" enctype="multipart/form-data">
            <div class="form-group">
                <label for="title">Titre</label>
                <input type="text" name="title" id="title" value="<%= post.title %>" />
            </div>
            <div class="form-group">
                <label for="content">Contenu</label>
                <textarea name="content" id="content"><%= post.content %> </textarea>
            </div>
            <div class="form-group">
                <img src="<%= post.imageUrl %>" alt="" width="128">
            </div>
            <div class="form-group">
                <label for="image">Nouvelle image</label>
                <input type="file" required name="image">
            </div>
            <div class="form-group">
                <label for="categories">Cat√©gories</label>
                <input type="text" name="categories" id="categories" placeholder="js,php"
                    value="<%= post.categories.join(" ,") %> " />
            </div>
            <div class="form-group">
                <button type="submit">Modifier</button>
            </div>
           
        </form>
    </div>
    <% if (locals.post) { %>
        

        <% } %>


            <%- include('./partials/footer') %>